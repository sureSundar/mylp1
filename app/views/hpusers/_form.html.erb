<%= simple_form_for(@hpuser) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :email %>
    <%= f.input :client_id %>
    <%= f.input :client_secret %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
